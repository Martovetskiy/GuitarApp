<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayer.SelectBlDevice"
             BackgroundColor="White">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label FontFamily="MonseratBold" Text="Выберите вашу гитару" FontSize="Subtitle" TextColor="#5a595e"/>
        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        
        <StackLayout>
            <ListView x:Name="DeviceList" ItemSelected="DeviceList_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label VerticalOptions="Center" FontFamily="MonseratMed" Padding="20,0,0,0" FontSize="Large" TextColor="Black"  Text="{Binding Name}"/>
                                <Rectangle BackgroundColor="#1232" ScaleY="0.95"></Rectangle>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>